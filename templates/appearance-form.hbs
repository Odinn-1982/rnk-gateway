<form class="rnk-lobby-form" autocomplete="off">
  <header>
    <h2>Appearance & Messaging</h2>
    <p>Customize the overlay visuals and the message delivered to players waiting in the lobby.</p>
  </header>
  <div class="form-group">
    <label for="customTitle">Custom Title</label>
    <input type="text" id="customTitle" name="customTitle" value="{{settings.customTitle}}" placeholder="Leave blank for default title">
  </div>
  <div class="form-group">
    <label for="customMessage">Custom Message</label>
    <textarea id="customMessage" name="customMessage" rows="4" placeholder="Provide maintenance details or announcements.">{{settings.customMessage}}</textarea>
  </div>
  <div class="form-group">
    <label for="customImage">Background Image Path</label>
    <input type="text" id="customImage" name="customImage" value="{{settings.customImage}}" placeholder="modules/your-module/assets/image.jpg">
    <small>Leave empty to restore the bundled artwork.</small>
  </div>
  <div class="form-grid">
    <div class="form-group">
      <label for="accentColor">Accent Color</label>
      <input type="color" id="accentColor" name="accentColor" value="{{settings.accentColor}}">
    </div>
    <div class="form-group">
      <label for="overlayOpacity">Overlay Opacity</label>
      <input type="range" id="overlayOpacity" name="overlayOpacity" value="{{settings.overlayOpacity}}" min="0.2" max="0.95" step="0.05">
      <span class="range-value">{{settings.overlayOpacity}}</span>
    </div>
    <div class="form-group">
      <label for="blurStrength">Background Blur (px)</label>
      <input type="range" id="blurStrength" name="blurStrength" value="{{settings.blurStrength}}" min="0" max="40" step="2">
      <span class="range-value">{{settings.blurStrength}}</span>
    </div>
    <div class="form-group">
      <label for="messageAlignment">Message Alignment</label>
      <select id="messageAlignment" name="messageAlignment">
        <option value="center" {{#if (eq settings.messageAlignment "center")}}selected{{/if}}>Center</option>
        <option value="left" {{#if (eq settings.messageAlignment "left")}}selected{{/if}}>Left</option>
        <option value="right" {{#if (eq settings.messageAlignment "right")}}selected{{/if}}>Right</option>
      </select>
    </div>
    <div class="form-group">
      <label for="headingFont">Heading Font Stack</label>
      <input type="text" id="headingFont" name="headingFont" value="{{settings.headingFont}}" placeholder="e.g., &quot;Cinzel&quot;, &quot;Georgia&quot;, serif">
    </div>
    <div class="form-group">
      <label for="bodyFont">Body Font Stack</label>
      <input type="text" id="bodyFont" name="bodyFont" value="{{settings.bodyFont}}" placeholder="e.g., &quot;Source Sans Pro&quot;, &quot;Segoe UI&quot;, sans-serif">
    </div>
  </div>
  <section class="rnk-lobby-theme-palette">
    <h3>Quick Themes</h3>
    <p>Select a curated style to instantly update fonts, colors, and ambience.</p>
    <div class="theme-grid">
      {{#each themes}}
        <button type="button" class="theme-chip {{#if this.isActive}}is-active{{/if}}" data-theme-id="{{this.id}}">
          <i class="fas fa-palette" aria-hidden="true"></i>
          <span>{{this.label}}</span>
        </button>
      {{/each}}
    </div>
  </section>
  <footer>
    <button type="submit" class="rnk-lobby-form__primary">Save Changes</button>
    <button type="button" class="rnk-lobby-form__secondary" data-action="reset-defaults">Reset to Defaults</button>
  </footer>
</form>


